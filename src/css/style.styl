@font-face
  font-family HFNSS
  src url('HFNSS.ttf')
  
@font-face
  font-family HFLLG
  src url('HFLLG.ttf')

standardSize    = 2em
biggerSize      = 4em
wayBig          = 8em
cellWidth       = 50px
cellHeight      = 19px

pointColor      = #b0a69a
titleColor      = #a0968a

importantText   = #b39f4b
importanterText = #e3d34b

ignorable       = #807872
veryIgnorable   = #54574d

almostBlack     = #182406
backgroundColor = #030907
totalBlack      = #000000
trackerBorder   = #21211a

red             = #f20723


::-webkit-input-placeholder {
   color: pointColor;
}

  

body
  background              backgroundColor
  padding                 0
  margin                  0
  
.header
  font-family             HFNSS
  color                   titleColor
  font-size               biggerSize
  margin                  0 
  &.banner
    color                 ignorable
  

.point
  font-family             HFNSS
  color                   pointColor
  font-size               standardSize
  margin                  0 
  font-smooth             never
  webkit-font-smoothing   none
  -webkit-font-smoothing  none
  &.logic
    font-family           HFLLG
    
  &.link
    color                 importantText
    cursor                pointer
    text-decoration       none
    &:hover
      color               importanterText
  &.ignorable
    color                 ignorable
    // margin-top            2px
    // font-size             2em
  &.veryIgnorable
    color                 veryIgnorable
  &.date
    color                 titleColor
  &.name
    // color #60708f
    color                 #6a7886
  &.archive-item
    color                 #808f60
    cursor                pointer
    &:hover
      color               #8bcf4b
    
.point-section
  font-family             HFNSS
  color                   pointColor
  font-size               standardSize
  margin                  0 
  width                   80%
  height                  10em
  background              none
  outline                 none
  outline                 none
  &.logic
    font-family           HFLLG


.container
  padding                 0
  // margin                  1em
  box-sizing              border-box
  width                   auto


.row  
  content                 ''
  display                 table
  clear                   both
  width                   100%
  &.big
    min-height            25px
 

.paper
  padding-left            2em
  padding-top             2em
  width                   968px
  float                   left

.archive
  width                   420px
  float                   right
  
.column  
  float                   left 
  position                relative
  width                   250px
  // margin-top              2px
  &.big
    width                 440px
    
.field
  background-color        backgroundColor
  border-style            solid
  border-width            2px
  border-color            pointColor
  color                   pointColor
  // border-color            veryIgnorable
  font-family             HFNSS
  // color                   veryIgnorable
  font-smooth             never
  webkit-font-smoothing   none
  -webkit-font-smoothing  none
  font-size               standardSize
  outline                 none
  width                   400px
  margin-top              2px
  &.error
    border-color          red
    color                 red

.mount
  margin                  0
  padding                 0
  width                   100%
  height                  100%

.button
  background-color        almostBlack
  border-style            solid
  border-width            2px
  border-color            ignorable
  font-family             HFNSS
  color                   ignorable
  font-size               standardSize
  outline                 none
  width                   100%
  height                  1em
  margin                  0
  &:hover
    background-color      almostBlack
    color                           pointColor
